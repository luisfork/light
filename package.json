{
  "name": "light",
  "version": "1.0.0",
  "description": "Texas Electricity Plan Finder - Free, unbiased electricity plan comparison tool",
  "main": "src/js/ui.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "bun run build:ts && bun run build:css",
    "build:ts": "bun build ./src/ts/ui.ts --outdir ./src/js --target browser",
    "build:css": "bun run scripts/build-css.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun run typecheck && bun run test:unit && bun run test:ui",
    "test:unit": "bun test tests/unit",
    "test:ui": "bunx playwright test",
    "dev": "python3 -m http.server 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisfork/light.git"
  },
  "keywords": [
    "texas",
    "electricity",
    "calculator",
    "energy",
    "plans"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luisfork/light/issues"
  },
  "homepage": "https://github.com/luisfork/light#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3"
  }
}